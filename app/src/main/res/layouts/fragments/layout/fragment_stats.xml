<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.fragments.stats.StatsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/stats" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_12"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/value_124"
            android:layout_height="@dimen/value_124"
            android:layout_gravity="center"
            android:layout_margin="@dimen/value_12">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:progress="75"
                app:indicatorColor="?colorPrimaryVariant"
                app:indicatorSize="@dimen/value_120"
                app:trackColor="@color/default_grey"
                app:trackThickness="@dimen/value_8" />

            <TextView
                style="@style/Theme.WifiAttendance.Headline1.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/_24" />
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/value_8"
                    android:layout_height="@dimen/value_56"
                    android:background="?colorPrimary" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/value_56">

                    <TextView
                        style="@style/Theme.WifiAttendance.Headline1.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Working days"
                        android:textColor="?colorPrimary" />

                </FrameLayout>

                <Space
                    android:layout_width="@dimen/value_12"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Theme.WifiAttendance.Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="6:00am to 9:00pm" />

                    <TextView
                        style="@style/Theme.WifiAttendance.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Wednesday - 6.5hr" />
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>